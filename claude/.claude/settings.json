{
  "env": {
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git remote:*)",
      "Bash(git stash list)",
      "Bash(but status:*)",
      "Bash(but log:*)",
      "Bash(but diff:*)",
      "Bash(but show:*)",
      "Bash(but branch:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(pwd)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "mcp__plugin_context7_*",
      "Skill(frontend-design:frontend-design)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "always-works-testing@florin-popa-marketplace": true,
    "ast-grep@ast-grep-marketplace": false,
    "code-review@claude-plugins-official": false,
    "commit-commands@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": false,
    "security-guidance@claude-plugins-official": true,
    "rails-codegen@florin-popa-marketplace": true,
    "cognitive-load@florin-popa-marketplace": true,
    "simplicity-first@florin-popa-marketplace": true,
    "typescript-lsp@claude-plugins-official": true,
    "dev-browser@dev-browser-marketplace": false,
    "cloudflare-toolkit@florin-popa-marketplace": false,
    "sentry-skills@sentry-skills": true
  },
  "extraKnownMarketplaces": {
    "beads-marketplace": {
      "source": {
        "source": "github",
        "repo": "steveyegge/beads"
      }
    },
    "florin-popa-marketplace": {
      "source": {
        "source": "github",
        "repo": "FlorinPopaCodes/claude-marketplace"
      }
    },
    "ast-grep-marketplace": {
      "source": {
        "source": "github",
        "repo": "ast-grep/claude-skill"
      }
    }
  },
  "sandbox": {
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": [
      "docker"
    ]
  },
  "alwaysThinkingEnabled": true
}
